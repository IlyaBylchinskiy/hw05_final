    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "83.220.169.127:8000",
                "--noreload"
            ],
            "django": true,
        },
        {
            "name": "Django: Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "env": {"DJANGO_SETTINGS_MODULE": "yatube.settings"},
            "args": [
                "test"
            ],
            "django": true
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "pythonPath": "/home/hosting/.virtualenvs/ya/bin/python",
            "program": "/home/hosting/.virtualenvs/ya/bin/pytest"
        },
    ]
}